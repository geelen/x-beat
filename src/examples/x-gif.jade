extends _layout.jade
block content
  style.
    x-gif {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
    h1 {
      background-color: rgba(255,255,255,0.1);
      float: left;
    }
  h1= "<x-beat>"
  x-beat(midi channel="0" note="65")
  x-gif(src="https://s3-us-west-2.amazonaws.com/x-gif-tests/explosion.gif" sync ping-pong fill)
  script.
    var xBeat = document.querySelector('x-beat'),
      xGif = document.querySelector('x-gif');

    xBeat.addEventListener('x-beat-clock', function(e) {
      xGif.clock.apply(xGif, e.detail);
    })
